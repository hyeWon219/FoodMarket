<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.CartMapper">
	<insert id="addCart">
		insert into tbl_cart values(seq_cart.nextval, #{pid}, #{pname},
		#{pprice}, #{pcontent}, #{pimg}, #{pcount})
	</insert>
	
	<!-- 물품 삭제 -->
	<delete id="deleteCart">
		delete from tbl_cart where cno=#{cno}
	</delete>
	
	<update id="modifyCart">
		update tbl_cart set pcount=#{pcount} where pid=#{pid}
	</update>
	
	<!-- 카트 목록 조회 -->
	<select id="getCart" resultType="com.spring.domain.CartVO">
		select * from tbl_cart order by pid
	</select>

</mapper>